[push]
	default = simple

[alias]
    st = status
    lg = log -p
    co = checkout
    ls = ls-files
    au = update-index --assume-unchanged
    ua = update-index --no-assume-unchanged
    uaa = ! git ls-files -v | grep '^[a-z]' | cut -c3- | xargs git uau --
    ast = ! git uaa && git status

    df = diff
    ds = diff --staged

    ci = commit
    cm = commit -m
    cmm = commit -Ssm
    ca = commit --amend
    cam = commit --amend -m
    caa = commit --amend --no-edit
    ss = commit --amend  --no-edit -S

    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all --date=local

    stat = show HEAD --stat

    fa = fetch --all
    mff = merge --ff-only
    fam = !git fetch --all && git merge --ff-only
    fams = !git fetch --all && git merge --ff-only && git submodule update --init

    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard
